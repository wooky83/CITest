    device: "iPhone 14 Pro",
    xcodebuild_formatter: "xcpretty --report junit --output 'build/report.junit'",
    code_coverage: true,
    result_bundle_path: "build/result.xcresult",
    result_bundle: true,
    output_directory: "build",
    reset_simulator: true,
  )
  UI.success("test debugüòÅ")
end
